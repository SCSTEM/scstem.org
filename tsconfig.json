{
  "extends": "@tsconfig/docusaurus/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["@cloudflare/workers-types"],
    "jsx": "preserve",
    "paths": {
      "@site/*": ["./*"],
      "@theme/*": [
        "./src/theme/*",
        // Workaround to get @theme to stop making TS sad
        "./node_modules/@docusaurus/plugin-ideal-image/lib/theme/*"
      ]
    }
  }
}
